<Window x:Class="TaskTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:TaskTool.Views"
        Title="TaskTool" Height="820" Width="1480" MinHeight="760" MinWidth="1280"
        Background="{StaticResource BgBrush}">
    <Grid Background="{StaticResource BgBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource PanelBrush}" BorderBrush="{StaticResource BorderBrushColor}" BorderThickness="0,0,1,0">
            <StackPanel Margin="14">
                <TextBlock Text="TaskTool" FontSize="24" FontWeight="SemiBold" Margin="6,4,6,16" />
                <ListBox ItemsSource="{Binding NavigationItems}" SelectedItem="{Binding SelectedView}" Background="Transparent" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="10" Padding="12" Margin="0,0,0,8" Background="#0B1220">
                                <TextBlock Text="{Binding Title}" FontSize="15" />
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Padding="16" Background="{StaticResource BgBrush}">
            <ContentControl Content="{Binding SelectedView}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch" />
        </Border>

        <Border Grid.Column="2" Width="430" Background="{StaticResource PanelBrush}" BorderBrush="{StaticResource BorderBrushColor}" BorderThickness="1,0,0,0" Padding="14"
                Visibility="{Binding IsTodaySelected, Converter={StaticResource BooleanToVisibilityConverter}}">
            <views:TaskDetailPanel DataContext="{Binding TodayViewModel}" />
        </Border>
    </Grid>
</Window>
