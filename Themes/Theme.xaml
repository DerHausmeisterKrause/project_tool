<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="AppBackground">#111827</Color>
    <Color x:Key="Surface">#1F2937</Color>
    <Color x:Key="Surface2">#0F172A</Color>
    <Color x:Key="SurfaceAlt">#0F172A</Color>
    <Color x:Key="Border">#334155</Color>
    <Color x:Key="TextPrimary">#E5E7EB</Color>
    <Color x:Key="TextSecondary">#94A3B8</Color>
    <Color x:Key="Accent">#3B82F6</Color>
    <Color x:Key="Danger">#B91C1C</Color>
    <Color x:Key="Success">#059669</Color>

    <SolidColorBrush x:Key="BgBrush" Color="{StaticResource AppBackground}"/>
    <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource Surface2}"/>
    <SolidColorBrush x:Key="SurfaceAltBrush" Color="{StaticResource SurfaceAlt}"/>
    <SolidColorBrush x:Key="BorderBrushColor" Color="{StaticResource Border}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}"/>

    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BgBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>
    <Style TargetType="UserControl"><Setter Property="Background" Value="{StaticResource BgBrush}"/></Style>
    <Style TargetType="Grid"><Setter Property="Background" Value="Transparent"/></Style>
    <Style TargetType="TextBlock"><Setter Property="Foreground" Value="{StaticResource TextBrush}"/></Style>
    <Style TargetType="ListBox"><Setter Property="Background" Value="Transparent"/><Setter Property="BorderBrush" Value="Transparent"/></Style>
    <Style TargetType="ListBoxItem"><Setter Property="Background" Value="Transparent"/><Setter Property="Foreground" Value="{StaticResource TextBrush}"/></Style>

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Margin" Value="0,2,0,8"/>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="0,2,0,8"/>
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="0,2,0,8"/>
    </Style>

    <Style TargetType="DatePickerTextBox">
        <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    </Style>

    <Style TargetType="Calendar">
        <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
    </Style>

    <Style TargetType="DatePicker" BasedOn="{StaticResource DatePickerStyle}">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
        <Setter Property="Resources">
            <Setter.Value>
                <ResourceDictionary>
                    <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#0F172A"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="#E5E7EB"/>
                </ResourceDictionary>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Calendar" BasedOn="{StaticResource CalendarStyle}">
        <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    </Style>

    <Style TargetType="CalendarButton">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style TargetType="CalendarItem">
        <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
    </Style>

    <Style TargetType="CalendarDayButton">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True"><Setter Property="Background" Value="#172033"/></Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ButtonBaseStyle" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="0,0,8,8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True"><Setter Property="Opacity" Value="0.92"/></Trigger>
            <Trigger Property="IsPressed" Value="True"><Setter Property="Opacity" Value="0.85"/></Trigger>
            <Trigger Property="IsEnabled" Value="False"><Setter Property="Foreground" Value="#D1D5DB"/><Setter Property="Background" Value="#374151"/></Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}"/>
    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}"><Setter Property="Background" Value="#334155"/></Style>
    <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}"><Setter Property="Background" Value="{StaticResource SuccessBrush}"/></Style>
    <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}"><Setter Property="Background" Value="#92400E"/></Style>
    <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}"><Setter Property="Background" Value="{StaticResource DangerBrush}"/></Style>

    <Style x:Key="TogglePillStyle" TargetType="ToggleButton">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Background" Value="#1F2937"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="Margin" Value="0,0,8,8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="999">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True"><Setter Property="Background" Value="#0F172A"/><Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/><Setter Property="Foreground" Value="{StaticResource TextBrush}"/><Setter Property="BorderThickness" Value="2"/></Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SegmentedRadioLeftStyle" TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="MinWidth" Value="170"/>
        <Setter Property="Padding" Value="14,4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="RootBorder" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="10,0,0,10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True"><Setter TargetName="RootBorder" Property="Background" Value="{StaticResource AccentBrush}"/><Setter TargetName="RootBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/><Setter Property="Foreground" Value="#0B1220"/></Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SegmentedRadioRightStyle" TargetType="RadioButton" BasedOn="{StaticResource SegmentedRadioLeftStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="RootBorder" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0,1,1,1" CornerRadius="0,10,10,0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True"><Setter TargetName="RootBorder" Property="Background" Value="{StaticResource AccentBrush}"/><Setter TargetName="RootBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/><Setter Property="Foreground" Value="#0B1220"/></Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="LinkButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="Margin" Value="0,6,0,0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style x:Key="DayMarkerSegmentBaseStyle" TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="MinWidth" Value="90"/>
        <Setter Property="Padding" Value="16,4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="RootBorder" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True"><Setter TargetName="RootBorder" Property="Background" Value="{StaticResource AccentBrush}"/><Setter TargetName="RootBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/><Setter Property="Foreground" Value="#0B1220"/></Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="DayMarkerSegmentLeftStyle" TargetType="RadioButton" BasedOn="{StaticResource DayMarkerSegmentBaseStyle}"/>
    <Style x:Key="DayMarkerSegmentMiddleStyle" TargetType="RadioButton" BasedOn="{StaticResource DayMarkerSegmentBaseStyle}"/>
    <Style x:Key="DayMarkerSegmentRightStyle" TargetType="RadioButton" BasedOn="{StaticResource DayMarkerSegmentBaseStyle}"/>

    <Style x:Key="DayMarkerChipToggleStyle" TargetType="ToggleButton" BasedOn="{StaticResource TogglePillStyle}">
        <Setter Property="Height" Value="30"/>
        <Setter Property="MinWidth" Value="62"/>
        <Setter Property="Padding" Value="14,4"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>



    <Style x:Key="LinkButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="Margin" Value="0,6,0,0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style x:Key="DayMarkerSegmentBaseStyle" TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="MinWidth" Value="90"/>
        <Setter Property="Padding" Value="16,4"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="RootBorder" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="RootBorder" Property="BorderBrush" Value="#64748B"/>
                            <Setter TargetName="RootBorder" Property="Background" Value="#172033"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="RootBorder" Property="Background" Value="{StaticResource AccentBrush}"/>
                            <Setter TargetName="RootBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            <Setter Property="Foreground" Value="#0B1220"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DayMarkerSegmentLeftStyle" TargetType="RadioButton" BasedOn="{StaticResource DayMarkerSegmentBaseStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="RootBorder" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="15,0,0,15">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True"><Setter TargetName="RootBorder" Property="BorderBrush" Value="#64748B"/><Setter TargetName="RootBorder" Property="Background" Value="#172033"/></Trigger>
                        <Trigger Property="IsChecked" Value="True"><Setter TargetName="RootBorder" Property="Background" Value="{StaticResource AccentBrush}"/><Setter TargetName="RootBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/><Setter Property="Foreground" Value="#0B1220"/></Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DayMarkerSegmentMiddleStyle" TargetType="RadioButton" BasedOn="{StaticResource DayMarkerSegmentBaseStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="RootBorder" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0,1,0,1">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True"><Setter TargetName="RootBorder" Property="BorderBrush" Value="#64748B"/><Setter TargetName="RootBorder" Property="Background" Value="#172033"/></Trigger>
                        <Trigger Property="IsChecked" Value="True"><Setter TargetName="RootBorder" Property="Background" Value="{StaticResource AccentBrush}"/><Setter TargetName="RootBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/><Setter Property="Foreground" Value="#0B1220"/></Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DayMarkerSegmentRightStyle" TargetType="RadioButton" BasedOn="{StaticResource DayMarkerSegmentBaseStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="RootBorder" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="0,15,15,0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True"><Setter TargetName="RootBorder" Property="BorderBrush" Value="#64748B"/><Setter TargetName="RootBorder" Property="Background" Value="#172033"/></Trigger>
                        <Trigger Property="IsChecked" Value="True"><Setter TargetName="RootBorder" Property="Background" Value="{StaticResource AccentBrush}"/><Setter TargetName="RootBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/><Setter Property="Foreground" Value="#0B1220"/></Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DayMarkerChipToggleStyle" TargetType="ToggleButton" BasedOn="{StaticResource TogglePillStyle}">
        <Setter Property="Height" Value="30"/>
        <Setter Property="MinWidth" Value="62"/>
        <Setter Property="Padding" Value="14,4"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Padding" Value="14"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <Style x:Key="BadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="#1E293B"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="999"/>
        <Setter Property="Padding" Value="8,2"/>
        <Setter Property="Margin" Value="0,0,6,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>
